<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HotelManagment</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" style="background-color:white" @onclick="ToggleNavMenu">
    <nav class="flex-column" >
        <div class="nav-item px-3">
            <NavLink style="background-color:yellow;color:black"  class="nav-link" href="/" Match="NavLinkMatch.All"
                     onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='yellow';">

                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink style="background-color:yellow;color:black" class="nav-link" href="reserveRoom" Match="NavLinkMatch.All"
                     onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='yellow';">

                <span class="oi oi-bold" aria-hidden="true"></span> Reserve
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink style="background-color: yellow; color: black;" class="nav-link"  Match="NavLinkMatch.All"
            @onclick="ToggleOptions">

                <span class="oi oi-clipboard" aria-hidden="true"></span> Admin
            </NavLink>
            @if (showOptions)
            {
                <div class="additional-options">
                    <ul>
                        <li><NavLink href="AddRoom" style="color:black">Add Room</NavLink></li>
                        <li><NavLink href="Option2">Change Roles</NavLink></li>
                        <li><NavLink href="Option3">Activate Email</NavLink></li>
                        <li><NavLink href="Option4">Reservation In Day</NavLink></li>
                        <li><NavLink href="Option5">Personel List</NavLink></li>
                        <li><NavLink href="Option5">Add Image</NavLink></li>
                    </ul>
                </div>
            }
        </div>
        <div class="nav-item px-3">
            <NavLink style="background-color:yellow;color:black" class="nav-link" href="Technical" Match="NavLinkMatch.All"
                     onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='yellow';">

                <span class="oi oi-beaker" aria-hidden="true"></span> Technical
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink style="background-color: yellow; color: black;" class="nav-link" href="Guests" Match="NavLinkMatch.All"
                     onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='yellow';">
                <span class="oi oi-people" aria-hidden="true"></span> Guests
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink style="background-color:yellow;color:black" class="nav-link" href="Kitchen" Match="NavLinkMatch.All"
                onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='yellow';">

                <span class="oi oi-basket" aria-hidden="true"></span> Kitchen
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink style="background-color:yellow;color:black" class="nav-link" href="InspectionRoom" Match="NavLinkMatch.All"
                     onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='yellow';">

                <span class="oi oi-basket" aria-hidden="true"></span> Inspection
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    bool showOptions = false;

    void ToggleOptions()
    {
        showOptions = !showOptions;
    }
}
